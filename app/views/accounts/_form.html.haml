= simple_form_for(@account) do |f|
  = f.error_notification

  .form-inputs
    = f.input :account_number
    = f.association :currency, prompt: t("Select a Currency")
    = f.input :balance

  .form-actions
    .well.col-sm-9.col-sm-offset-3
      = f.button :submit, :class=> 'btn-primary'

.clearfix
